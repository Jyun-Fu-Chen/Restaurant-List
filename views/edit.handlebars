<div class="container">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">

    <div class="mb-3">
      <label for="name" class="form-label">店名</label>
      <input type="text" class="form-control" id="name" placeholder="店名" name="name" value="{{restaurant.name}}"
        required>
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文店名</label>
      <input type="text" class="form-control" id="name_en" placeholder="英文店名" name="name_en"
        value="{{restaurant.name_en}}" required>
    </div>
    <div class="mb-3">
      <select name="category" class="form-select" aria-label="Default select example" required>
        <option value="">Open this select menu</option>
        <option value="義式餐廳">義式餐廳</option>
        <option value="酒吧">酒吧</option>
        <option value="咖啡廳">咖啡廳</option>
        <option value="日本料理">日本料理</option>
        <option value="美式">美式</option>

      </select>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結</label>
      <input type="url" class="form-control" id="image" placeholder="圖片連結" name="image" value="{{restaurant.image}}"
        required>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" id="location" placeholder="地址" name="location"
        value="{{restaurant.location}}" required>
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話</label>
      <input type="tel" class="form-control" id="phone" placeholder="電話" name="phone" value="{{restaurant.phone}}"
        required>
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">地圖</label>
      <input type="url" class="form-control" id="google_map" placeholder="地圖" name="google_map"
        value="{{restaurant.google_map}}" required>
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分</label>
      <input type="number" class="form-control" id="rating" placeholder="評分" name="rating" value="{{restaurant.rating}}"
        required>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">簡介</label>
      <textarea name="description" class="form-control" id="description" rows="3"
        required>{{restaurant.description}}</textarea>
    </div>

    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-3">更新餐廳</button>
    </div>
  </form>
  <div class="col-auto">
    <a href="/">
      <button type="submit" class="btn btn-primary mb-3">回首頁</button>
    </a>
  </div>
</div>